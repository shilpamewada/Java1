package NestedForLoop;

public class RhombusPattern {

    public static void main(String[] args) {
        // Specify the size of the rhombus directly
        for(int i = 1; i <= 5; i++) {
            // Print spaces
            for (int j = 5 - i; j >= 1; j--) {
                System.out.print(" ");
            }
            // Print stars
            for(int k = 1; k <= i; k++) {
                System.out.print("* ");
            }
            System.out.println();
        }

        // Lower half of the rhombus
        for(int i = 4; i >= 1; i--) {
            // Print spaces
            for (int j = 1; j <= 5 - i; j++) {
                System.out.print(" ");
            }
            // Print stars
            for(int k = 1; k <= i; k++) {
                System.out.print("* ");
            }
            System.out.println();
        }
    }
}
