package NestedForLoop;

public class LeftTriangle {

    public static void main(String[] args) {
        for (int i = 1; i <= 5; i++) {
            for (int j = 1; j <= i; j++) {
                System.out.print(" "); // Print spaces to align stars to the right
            }
            System.out.println("*"); // Print a single star after spaces
        }
    }
}
